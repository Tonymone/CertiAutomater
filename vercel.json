{
  "version": 2,
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.6" }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
